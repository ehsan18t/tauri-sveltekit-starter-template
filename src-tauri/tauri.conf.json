{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Tauri + SvelteKit Starter Template",
	"version": "1.0.0",
	"identifier": "me.ehsankhan.tauri-sveltekit-starter-template",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:1420",
		"beforeDevCommand": "vite dev",
		"beforeBuildCommand": "vite build"
	},
	"app": {
		"windows": [
			{
				"decorations": false,
				"width": 800,
				"minWidth": 600,
				"height": 600,
				"minHeight": 400,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"publisher": "Ehsan Khan",
		"category": "Productivity",
		"shortDescription": "Short application description",
		"longDescription": "Long application description",
		"resources": [],
		"copyright": "Copyright Â© 2025 Ehsan Khan",
		"licenseFile": "../LICENSE",
		"externalBin": [],
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		}
	}
}
